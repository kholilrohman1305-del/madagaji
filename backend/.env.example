PORT=4000
NODE_ENV=production

DB_HOST=127.0.0.1
DB_PORT=3306
DB_POOL_SIZE=20
DB_CONNECT_TIMEOUT=10000

# DB1 (app data: gaji/users)
DB1_NAME=your_db1_name
DB1_USER=your_db1_user
DB1_PASSWORD=your_db1_password

# DB2 (master data: teachers/classes/subjects)
DB2_NAME=your_db2_name
DB2_USER=your_db2_user
DB2_PASSWORD=your_db2_password

# Fallback lama (optional)
DB_NAME=your_db1_name
DB_USER=your_db1_user
DB_PASSWORD=your_db1_password
DB_MASTER_NAME=your_db2_name

MASTER_CACHE_TTL_MS=5000
SCHEDULE_CACHE_TTL_MS=5000
SCHEDULE_DAY_CACHE_TTL_MS=5000
GURU_CACHE_TTL_MS=30000
SCHEDULER_META_CACHE_TTL_MS=30000

HTTP_JSON_LIMIT=2mb
HTTP_COMPRESSION_LEVEL=6
HTTP_LOG=false
HTTP_KEEP_ALIVE_TIMEOUT_MS=65000
HTTP_HEADERS_TIMEOUT_MS=66000
HTTP_REQUEST_TIMEOUT_MS=120000

FRONTEND_ORIGIN=http://localhost:5173,https://your-domain.com

JWT_SECRET=change_this_secret
JWT_EXPIRES_IN=7d
JWT_ISSUER=mada-core
JWT_AUDIENCE=mada-apps

# For SSO integration (trust user claims from shared JWT)
AUTH_TRUST_TOKEN_USER=false

# Dev-only bypass
AUTH_BYPASS=false

ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
ADMIN_NAME=Administrator
